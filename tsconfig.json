{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["ES5", "DOM"],
    "outDir": "./contents/js",
    "rootDir": "./contents/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "contents/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
} 